---
const currentPath = new URL(Astro.request.url).pathname;

const isActive = (path: string) => {
  if (path === '/' && currentPath === '/') return true;
  if (path !== '/' && currentPath.startsWith(path)) return true;
  return false;
};

const isProjectsActive = currentPath.startsWith('/projects');
---

<header>
    <div class="header-content">
        <div class="primary-nav">
            <nav>
                <ul>
                    <li><a href="/" class={isActive('/') ? 'active' : ''}>Home</a></li>
                    <li><a href="/publications" class={isActive('/publications') ? 'active' : ''}>Publications</a></li>
                    <li><a href="/cv" class={isActive('/cv') ? 'active' : ''}>CV</a></li>
                    <li class="dropdown">
                        <button type="button" class={`dropdown-button ${isProjectsActive ? 'active' : ''}`}>
                            Projects
                            <i class="fas fa-chevron-down"></i>
                        </button>
                        <div class="dropdown-content">
                            <ul class="toc-list">
                                <li class="toc-item toc-h2"><a href="/projects/pinn">Physics-Informed Neural Networks</a></li>
                                <li class="toc-item toc-h2"><a href="/projects/traccc">GPU-Accelerated Tracking as-a-Service</a></li>
                                <li class="toc-item toc-h2"><a href="/projects/plant-monitor">Plant and Environment Monitor</a></li>
                            </ul>
                        </div>
                    </li>
                </ul>
            </nav>
        </div>
        <div class="toc-dropdown dropdown" id="toc-dropdown">
            <button class="dropdown-button" aria-label="Table of Contents">
                <i class="fas fa-list"></i>
            </button>
            <div class="dropdown-content">
                <ul class="toc-list" id="dynamic-toc">
                    <!-- Dynamically populated by client-side script -->
                </ul>
            </div>
        </div>
    </div>
</header>

<script is:inline src="/js/toc.js"></script>
